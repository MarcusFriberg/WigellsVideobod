<?xml version="1.0" encoding="utf-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="hibernate" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.edusystems.Main</class>
        <class>org.edusystems.entities.Actor</class>
        <class>org.edusystems.entities.Address</class>
        <class>org.edusystems.entities.City</class>
        <class>org.edusystems.entities.Country</class>
        <class>org.edusystems.entities.Customer</class>
        <class>org.edusystems.entities.Film</class>
        <class>org.edusystems.entities.FilmActor</class>
        <class>org.edusystems.entities.Inventory</class>
        <class>org.edusystems.entities.Language</class>
        <class>org.edusystems.entities.Rental</class>
        <class>org.edusystems.entities.Staff</class>
        <class>org.edusystems.entities.Store</class>
        <class>org.edusystems.entities.TextFieldResult</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sakila?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>



